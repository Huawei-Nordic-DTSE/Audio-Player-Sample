<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:top_margin="10vp"
    ohos:left_margin="18vp"
    ohos:right_margin="15vp"
    ohos:orientation="horizontal"
    ohos:alignment="vertical_center">

    <de.hdodenhof.circleimageview.CircleImageView
        ohos:id="$+id:img_station_logo"
        ohos:height="40vp"
        ohos:width="40vp"
        ohos:image_src="$media:ic_radio"
        ohos:background_element="$graphic:background_image_logo"/>

    <Text
        ohos:id="$+id:text_station_name"
        ohos:height="match_content"
        ohos:width="300vp"
        ohos:padding="4vp"
        ohos:left_margin="7vp"
        ohos:text_size="17fp"
        ohos:text_color="$color:white"
        ohos:layout_alignment="vertical_center"
        ohos:truncation_mode="ellipsis_at_end"/>
</DirectionalLayout>